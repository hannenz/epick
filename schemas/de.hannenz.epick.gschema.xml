<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
	<schema id="de.hannenz.epick" path="/de/hannenz/epick/">
		<key type="s" name="color-format">
			<choices>
				<choice value="hex" />
				<choice value="rgb" />
			</choices>
			<default>"hex"</default>
			<summary>ePick color format</summary>
			<description>Set to "hex" or "rgb"</description>
		</key>
		<key type="b" name="close-to-systray">
			<default>true</default>
			<summary>Close to systray</summary>
			<description>If true, epick will stay in the systray when closed</description>
		</key>
		<key type="b" name="start-in-systray">
			<default>true</default>
			<summary>Start in systray</summary>
			<description>If true, epick will start minimized in the systray</description>
		</key>
		<key type="b" name="grab-mouse-pointer">
			<default>true</default>
			<summary>Grab mouse pointer</summary>
			<description>If true, epick will grab the mouse pointer during color picking and thus block the GUI</description>
		</key>

		<key type="s" name="view-mode">
			<choices>
				<choice value="List" />
				<choice value="Grid" />
			</choices>
			<default>"List"</default>
			<summary>View mode</summary>
			<description></description>
		</key>

	</schema>
</schemalist>